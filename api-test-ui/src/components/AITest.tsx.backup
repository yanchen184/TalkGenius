import { useState } from 'react'
import axios from 'axios'

interface AITestProps {
  token: string
}

interface GenerateReplyResponse {
  success: boolean
  suggestions: Array<{
    id: string
    text: string
    tone: string
    explanation?: string
  }>
  usageCount: number
  remainingQuota: number
  isPremium: boolean
}

const TONES = [
  { value: 'humorous', label: 'Humorous', color: 'bg-yellow-100 text-yellow-800' },
  { value: 'high_eq', label: 'High EQ', color: 'bg-purple-100 text-purple-800' },
  { value: 'gentle', label: 'Gentle', color: 'bg-pink-100 text-pink-800' },
  { value: 'cute', label: 'Cute', color: 'bg-rose-100 text-rose-800' },
  { value: 'romantic', label: 'Romantic', color: 'bg-indigo-100 text-indigo-800' },
  { value: 'professional', label: 'Professional', color: 'bg-blue-100 text-blue-800' },
  { value: 'direct', label: 'Direct', color: 'bg-gray-100 text-gray-800' },
  { value: 'flirty', label: 'Flirty', color: 'bg-red-100 text-red-800' }
]

export default function AITest({ token }: AITestProps) {
  const [message, setMessage] = useState('Hey, how was your day?')
  const [selectedTone, setSelectedTone] = useState('humorous')
  const [response, setResponse] = useState<GenerateReplyResponse | null>(null)
  const [loading, setLoading] = useState(false)
  const [error, setError] = useState('')

  const handleGenerate = async () => {
    if (!token) {
      setError('Please login first in Auth tab to get token')
      return
    }

    setLoading(true)
    setError('')
    setResponse(null)

    try {
      const res = await axios.post<GenerateReplyResponse>(
        '/api/v1/ai/generate-reply',
        {
          message: message,
          tone: selectedTone,
          language: 'zh-TW'
        },
        {
          headers: {
            Authorization: `Bearer ${token}`
          }
        }
      )
      setResponse(res.data)
    } catch (err: any) {
      setError(err.response?.data?.message || err.message)
    } finally {
      setLoading(false)
    }
  }

  const getToneStyle = (tone: string) => {
    return TONES.find(t => t.value === tone)?.color || 'bg-gray-100 text-gray-800'
  }

  return (
    <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <div className="space-y-6">
        <div className="card">
          <h2 className="text-xl font-bold mb-4 text-gray-800">Input Message</h2>
          <div className="space-y-4">
            {!token && (
              <div className="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                <p className="text-sm text-yellow-800">Please login first in Auth tab</p>
              </div>
            )}

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-1">Received Message</label>
              <textarea
                className="input resize-none"
                rows={4}
                value={message}
                onChange={(e) => setMessage(e.target.value)}
                placeholder="Enter or paste received message..."
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Select Tone Style</label>
              <div className="grid grid-cols-2 gap-2">
                {TONES.map(tone => (
                  <button
                    key={tone.value}
                    onClick={() => setSelectedTone(tone.value)}
                    className={`px-3 py-2 rounded-lg text-sm font-medium transition-all ${
                      selectedTone === tone.value
                        ? `${tone.color} ring-2 ring-primary`
                        : 'bg-gray-100 text-gray-600 hover:bg-gray-200'
                    }`}
                  >
                    {tone.label}
                  </button>
                ))}
              </div>
            </div>

            <button
              onClick={handleGenerate}
              disabled={loading || !token || !message}
              className="btn btn-primary w-full"
            >
              {loading ? 'Generating...' : 'Generate AI Reply'}
            </button>
          </div>
        </div>

        <div className="card bg-gray-50">
          <h3 className="text-sm font-bold mb-2 text-gray-700">API Request Info</h3>
          <div className="space-y-1 text-xs text-gray-600">
            <p><span className="font-medium">Endpoint:</span> POST /api/v1/ai/generate-reply</p>
            <p><span className="font-medium">Auth:</span> Bearer {token ? 'Set' : 'Not Set'}</p>
            <p><span className="font-medium">Message Length:</span> {message.length} chars</p>
            <p><span className="font-medium">Tone:</span> {TONES.find(t => t.value === selectedTone)?.label}</p>
          </div>
        </div>
      </div>

      <div className="space-y-6">
        <div className="card">
          <h2 className="text-xl font-bold mb-4 text-gray-800">AI Reply Suggestions</h2>

          {error && (
            <div className="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
              <p className="text-sm text-red-800 font-medium">Error</p>
              <p className="text-sm text-red-600 mt-1">{error}</p>
            </div>
          )}

          {response && (
            <div className="space-y-4">
              <div className="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
                <p className="text-sm text-green-800 font-medium">Success</p>
                <span className="text-xs text-green-600">
                  {response.isPremium ? 'Premium' : `${response.remainingQuota} remaining`}
                </span>
              </div>

              {response.suggestions && response.suggestions.length > 0 ? (
                response.suggestions.map((suggestion, index) => (
                  <div key={suggestion.id || index} className="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                    <div className="flex items-start justify-between mb-2">
                      <span className={`text-xs px-2 py-1 rounded ${getToneStyle(suggestion.tone)}`}>
                        {TONES.find(t => t.value === suggestion.tone)?.label || suggestion.tone}
                      </span>
                      <button
                        onClick={() => navigator.clipboard.writeText(suggestion.text)}
                        className="text-xs text-gray-500 hover:text-primary transition-colors"
                      >
                        Copy
                      </button>
                    </div>
                    <p className="text-gray-800 mb-2">{suggestion.text}</p>
                    {suggestion.explanation && (
                      <p className="text-xs text-gray-500 italic">{suggestion.explanation}</p>
                    )}
                  </div>
                ))
              ) : (
                <p className="text-gray-500 text-sm">No suggestions received</p>
              )}

              <div className="bg-gray-50 rounded-lg p-4 overflow-auto max-h-64">
                <p className="text-xs font-medium text-gray-700 mb-2">Full JSON Response:</p>
                <pre className="text-xs text-gray-600">{JSON.stringify(response, null, 2)}</pre>
              </div>
            </div>
          )}

          {!error && !response && (
            <div className="text-center py-12 text-gray-400">
              <p>Enter message and select tone to generate AI reply</p>
            </div>
          )}
        </div>
      </div>
    </div>
  )
}
